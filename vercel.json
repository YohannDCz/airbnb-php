{
  "version": 2,
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.6.2",
      "includeFiles": [
        "templates/**",
        "src/**",
        "assets/**"
      ]
    }
  },
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/styles/(.*)\\.css", "dest": "/templates/styles/$1.css" },
    { "src": "/script/(.*)\\.js", "dest": "/templates/script/$1.js" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}
